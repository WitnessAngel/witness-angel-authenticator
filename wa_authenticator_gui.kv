# #:import SwapTransition kivy.uix.screenmanager.SwapTransition


RelativeLayout:

    ScreenManager:

        id: screen_manager
        #transition: SwapTransition()

        AuthenticatorSelectorScreen:
            id: authenticator_selector_screen_id
            name: "authenticator_selector_screen"

        AuthenticatorCreationScreen:
            id: authenticator_creation_screen_id
            name: "authenticator_creation_screen"
            selected_authenticator_dir: authenticator_selector_screen_id.selected_authenticator_dir

        AuthenticatorSynchronizationScreen:
            id: authenticator_synchronization_screen_id
            name: "authenticator_synchronization_screen"
            selected_authenticator_dir: authenticator_selector_screen_id.selected_authenticator_dir

        RemoteDecryptionRequestScreen:
            id: authenticator_remote_decryption_requests_screen_id
            name: "authenticator_remote_decryption_requests_screen"
            selected_authenticator_dir: authenticator_selector_screen_id.selected_authenticator_dir

    WaitSpinner:
        id: wait_spinner
