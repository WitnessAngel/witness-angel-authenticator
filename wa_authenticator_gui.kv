#:import AuthenticatorManagementScreen wacomponents.screens.authenticator_management
#:import AuthenticatorCreationFormScreen wacomponents.screens.authenticator_creation_form
#:import AuthenticatorPublicationFormScreen wacomponents.screens.authenticator_publication_form
#:import AuthenticatorRevelationRequestManagementScreen wacomponents.screens.authenticator_revelation_request_management
# #:import SwapTransition kivy.uix.screenmanager.SwapTransition


RelativeLayout:

    ScreenManager:

        id: screen_manager
        #transition: SwapTransition()

        AuthenticatorManagementScreen:
            id: authenticator_management_screen_id
            name: "authenticator_selector_screen"  # FIXME normalize all "name:" here and below

        AuthenticatorCreationFormScreen:
            id: authenticator_creation_form_screen_id
            name: "authenticator_creation_screen"
            selected_authenticator_dir: authenticator_management_screen_id.selected_authenticator_dir

        AuthenticatorPublicationFormScreen:
            id: authenticator_publication_form_screen_id
            name: "authenticator_synchronization_screen"
            selected_authenticator_dir: authenticator_management_screen_id.selected_authenticator_dir

        AuthenticatorRevelationRequestManagementScreen:
            id: authenticator_revelation_request_management_screen_id
            name: "authenticator_revelation_request_management"
            selected_authenticator_dir: authenticator_management_screen_id.selected_authenticator_dir

    WaitSpinner:
        id: wait_spinner
