            #helper_text_mode: 'on_focus'
            #width: 50
            #color_mode: 'custom'
            #line_color_focus: app.COLORS.WHITE
            mode: "fill"
            #disabled: False
            #fill_color: app.COLORS.DARK_GREY
            #current_hint_text_color: app.COLORS.WHITE

        MDTextField:
            id: formfield_passphrasehint
            #size_hint_x: -0.5
