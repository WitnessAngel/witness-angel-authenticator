            height: dp(40)

            Button:
                id: button_initialize
                #background_color: app.COLORS.BUTTON_BACKGROUND
                #color: app.COLORS.DARKEST_BLUE
                text: "Initialize"
                #size: 150, 50
                size_hint: .4, 1
                pos_hint: {'x': .3}

                disabled: False
                on_release:
                    app.show_validate()

        AnchorLayout:
