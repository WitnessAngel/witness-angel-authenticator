#:import AuthenticatorManagementScreen wacomponents.screens.authenticator_management
#:import AuthenticatorCreationFormScreen wacomponents.screens.authenticator_creation_form
#:import AuthenticatorPublicationFormScreen wacomponents.screens.authenticator_publication_form
#:import AuthenticatorRevelationRequestManagementScreen wacomponents.screens.authenticator_revelation_request_management
#:import  AuthenticatorRevelationRequestDetailScreen wacomponents.screens.authenticator_revelation_request_detail
#:import WAScreenName wacomponents.screens.base.WAScreenName
# #:import SwapTransition kivy.uix.screenmanager.SwapTransition


BoxLayout:

    padding: app.application_margins

    RelativeLayout:

        ScreenManager:

            id: screen_manager
            #transition: SwapTransition()

            AuthenticatorManagementScreen:
                id: authenticator_management_id
                name: WAScreenName.authenticator_management  # FIXME normalize all "name:" here and below

            AuthenticatorCreationFormScreen:
                id: authenticator_creation_form_id
                name: WAScreenName.authenticator_creation_form
                selected_authenticator_dir: authenticator_management_id.selected_authenticator_dir

            AuthenticatorPublicationFormScreen:
                id: authenticator_publication_form_id
                name: WAScreenName.authenticator_publication_form
                selected_authenticator_dir: authenticator_management_id.selected_authenticator_dir

            AuthenticatorRevelationRequestManagementScreen:
                id: authenticator_revelation_request_management_id
                name: WAScreenName.authenticator_revelation_request_management
                selected_authenticator_dir: authenticator_management_id.selected_authenticator_dir

            AuthenticatorRevelationRequestDetailScreen:
                id: authenticator_revelation_request_detail_id
                name: WAScreenName.authenticator_revelation_request_detail
                selected_authenticator_dir: authenticator_management_id.selected_authenticator_dir

        WaitSpinner:
            id: wait_spinner
